<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="shubham.tourbuddy.TwoFragment">

    <LinearLayout


android:id="@+id/my_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e7dddd"
        android:weightSum="1">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:id="@+id/imageView"
            android:background="@drawable/location_52"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxWidth="2dp"
            android:maxHeight="2dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Show Nearby Restaurants"
            android:id="@+id/textView"
            android:layout_weight="0.05"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/linearLayout">
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@color/hinttext">
            <EditText
                android:id="@+id/restaurant_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select Your City"
                android:minWidth="750dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="SEARCH RESTAURANTS"
            android:id="@+id/restaurant_button"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#f1b719"
            android:textAppearance="@string/abc_font_family_body_2_material"
            android:textStyle="bold|italic"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>